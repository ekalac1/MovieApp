<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/colorPrimaryDark"
    tools:context="ba.unsa.etf.rma.elza_kalac.movieapp.Activities.Seasons">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seasons_text"
        android:paddingStart="30dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="14sp"
        android:background="@color/trailer_bcg"
        android:textColor="@color/white" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seasons_text"
        android:id="@+id/list"
        android:background="@color/season_list"
        android:paddingTop="12dp"
        android:numColumns="10"
        android:paddingBottom="12dp"
        android:paddingStart="30dp"
        android:orientation="horizontal">
    </GridView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seasons_year"
        android:paddingStart="30dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="14sp"
        android:text="2011"
        android:layout_below="@+id/list"
        android:background="@color/trailer_bcg"
        android:textColor="@color/white" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/seasons_year"
        android:id="@+id/episode_list"
        android:paddingStart="30dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">
    </ListView>



</RelativeLayout>
